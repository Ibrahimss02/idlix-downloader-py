{
  "name": "idlix-downloader",
  "version": "1.0.0",
  "description": "IDLIX Video Downloader - Desktop App",
  "main": "src/main/index.js",
  "author": "Your Name",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.idlix.downloader",
    "productName": "IDLIX Downloader",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../dist/idlix-downloader${os === 'win' ? '.exe' : ''}",
        "to": "backend/idlix-downloader${os === 'win' ? '.exe' : ''}"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
