{
  "name": "idlix-downloader",
  "version": "1.0.0",
  "description": "IDLIX Video Downloader - Desktop App",
  "main": "src/main/index.js",
  "homepage": "https://github.com/Ibrahimss02/idlix-downloader-py",
  "author": {
    "name": "Ibrahim",
    "email": "ibrahim@example.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ibrahimss02/idlix-downloader-py.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.idlix.downloader",
    "productName": "IDLIX Downloader",
    "publish": null,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../dist/idlix-downloader",
        "to": "backend/idlix-downloader"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility",
      "maintainer": "Ibrahim <ibrahim@example.com>"
    }
  }
}
